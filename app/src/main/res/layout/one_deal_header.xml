<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/dealHeader_boldText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bold Text will be here"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dealHeader_generalLocationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plano"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | " />

        <TextView
            android:id="@+id/dealHeader_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.9mi"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/dealHeader_bottomBody"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dealHeader_limitedAvailability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limited Availability"
                android:textColor="@android:color/holo_orange_dark"/>

            <TextView
                android:id="@+id/dealHeader_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount 50%"/>

            <TextView
                android:id="@+id/dealHeader_bought"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bought 1,000+"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/dealHeader_originalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$40"
                android:layout_gravity="end"/>

            <TextView
                android:id="@+id/dealHeader_currentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$20"
                android:textSize="30dp"
                android:textColor="@android:color/holo_green_light"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>