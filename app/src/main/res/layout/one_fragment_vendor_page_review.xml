<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".One.VendorPageReviewFragment">

    <LinearLayout
        android:id="@+id/vendorPageReviewFragment_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/vendorPageReviewFragment_Name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:text="John Doe"
                android:textSize="25sp"/>

            <RatingBar
                android:id="@+id/vendorPageReviewFragment_ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="5"
                android:clickable="false"
                android:isIndicator="true"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/vendorPageReviewFragment_partialReviewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="I like sushi sooo much and I want to go there again with colin. I went to China today I like to drink tea with llots of friends. There you go"/>

    </LinearLayout>

</RelativeLayout>
